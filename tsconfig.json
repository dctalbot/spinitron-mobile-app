{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "target": "esnext",
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "legacy",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
